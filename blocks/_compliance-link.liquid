<li>{% if block.settings.link_required == true %}<span class="required">* </span>{% endif %}<a href="{{ block.settings.link }}"{% if block.settings.link_external != blank %} target="_blank"{% endif %}>{{ block.settings.link_text }}</a></li>

{% schema %}
{
  "name": "Compliance link",
  "tag": null,
  "settings": [
    {
      "type": "url",
      "id": "link",
      "label": "t:settings.link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Label",
      "visible_if": "{{ block.settings.link != blank }}"
    },
    {
      "type": "checkbox",
      "id": "link_required",
      "label": "Required",
      "visible_if": "{{ block.settings.link != blank }}"
    },
    {
      "type": "checkbox",
      "id": "link_external",
      "label": "Open in new window",
      "visible_if": "{{ block.settings.link != blank }}"
    }
  ],
  "presets": [
    {
      "name": "Compliance link",
      "category": "t:categories.basic"
    }
  ]
}
{% endschema %}
