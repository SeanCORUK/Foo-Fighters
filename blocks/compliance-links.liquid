<ul
  class="spacing-style banner-compliance-links"
  style="--compliance-font-size: {{ block.settings.compliance_font_size | divided_by: 16.00 }}rem; {% render 'spacing-padding', settings: block.settings %}"
>
    {% content_for 'blocks' %}
</ul>

{% stylesheet %}
  .banner-compliance-links {
    list-style: none;
    font-size: var(--compliance-font-size);
    display: grid;
    justify-content: var(--horizontal-alignment);
    justify-items: var(--horizontal-alignment);
    @media (min-width: 750px) {
      display: flex;
      gap: 1.25rem;
    }
  }

  @media (min-width: 750px) {
    .banner-compliance-links {
        gap: 0
    }
    .banner-compliance-links li:after {
        content: "|";
        margin-inline: 0.5rem 0.6rem;
    }
    .banner-compliance-links li:last-child:after {
        content: "";
        margin-inline: 0rem;
    }
  }

  .banner-compliance-links a {
    text-decoration: none;
    border-bottom: 1px solid currentColor;
  }
  .banner-compliance-links a:hover,
  .banner-compliance-links a:focus {
    border-bottom: 3px solid currentColor;
  }
{% endstylesheet %}

