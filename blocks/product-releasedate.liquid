{% comment %} Tags {% endcomment %}
{% assign isPreOrder = false %}
{% assign isSoldOut = false %}
{% for tag in product.tags %}
  {% assign po_lower = tag | downcase %}
  {% if po_lower == 'preorder' or po_lower == 'pre-order' %}
    {% assign isPreOrder = true %}
    {% break %}
  {% endif %}
  {% assign so_lower = tag | downcase %}
  {% if so_lower == 'soldout' or so_lower == 'sold-out' %}
    {% assign isSoldOut = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if isSoldOut == false and closest.product.metafields.custom.release_date != blank or closest.product.metafields.custom.vague_release_date != blank %}
    {% assign placeholder = '<p>' | append: placeholder | append: '</p>' %}

    {% comment %} Whats the date {% endcomment %}
    {% assign day = closest.product.metafields.custom.release_date | date: '%-d' %}
    {% assign suffix = 'th' %}
    {% if day == '1' or day == '21' or day == '31' %}
        {% assign suffix = 'st' %}
    {% elsif day == '2' or day == '22' %}
        {% assign suffix = 'nd' %}
    {% elsif day == '3' or day == '23' %}
        {% assign suffix = 'rd' %}
    {% endif %}
    {% assign month_year = closest.product.metafields.custom.release_date | date: '%B %Y' %}
    {% assign formatted_date = day | append: suffix | append: ' ' | append: month_year %}
    {% assign formatted_date_hidden = day | append: suffix | append: ' ' | append: month_year %}

    {% assign date_label = '<div class="release-date--label">Released: </div>' %}
    {% assign date_in_div = formatted_date | prepend: '<div>' | append: '</div>' %}

    {% assign final_formatted_release_date = date_label | append: date_in_div %}

    {% comment %} Get product form {% endcomment %}
    {%- assign product_form_id = 'BuyButtons-ProductForm-' | append: section.id -%}

    {% comment %} Add hidden release date to order {% endcomment %}
    <input
        type="hidden"
        name="properties[Release date]"
        form="{{ product_form_id }}"
        id="hidden_release_date"
        value="{{ formatted_date_hidden }}"
    >
    {% comment %} Display on page {% endcomment %}
    {% render 'text', fallback_text: final_formatted_release_date, block: block, class: 'product--release-date' %}

{% endif %}

{% stylesheet %}
  .product--release-date {
    display: flex !important;
    flex-direction: row !important;
  }
  .product--release-date div {
    width: max-content
  }
  .release-date--label {
    font-weight: bold
  }
{% endstylesheet %}

